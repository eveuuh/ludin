<div class="container">
  <div class="row">
    <div class="col-md-6 offset-3 form">
      <h1 class="title">Contacter la LudIn-team</h1>
      <%= simple_form_for(@contact) do |f| %>
        <% if @contact.errors.any? %>
          <div id="error_explanation">
            <h3><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

            <ul>
            <% @contact.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <%= f.input :name, :label => "Nom", required: true, autofocus: true %>
        <%= f.input :email, :label => "Email", required: true %>
        <%= f.input :message, :label => "Message", required: true %>
        <%= f.submit "Envoyer", class: "button-form"%>
      <% end %>
    </div>
  </div>
</div>
